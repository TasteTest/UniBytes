# CampusEats Environment Variables Template
# Copy this file to .env and update with your actual values

# ==================== DATABASE CREDENTIALS ====================
# Users Database
POSTGRES_USERS_DB=users_db
POSTGRES_USERS_USER=users_user
POSTGRES_USERS_PASSWORD=users_pass

# Kitchen Database
POSTGRES_KITCHEN_DB=kitchen_db
POSTGRES_KITCHEN_USER=kitchen_user
POSTGRES_KITCHEN_PASSWORD=kitchen_pass

# Loyalty Database
POSTGRES_LOYALTY_DB=loyalty_db
POSTGRES_LOYALTY_USER=loyalty_user
POSTGRES_LOYALTY_PASSWORD=loyalty_pass

# Menu Database
POSTGRES_MENU_DB=menu_db
POSTGRES_MENU_USER=menu_user
POSTGRES_MENU_PASSWORD=menu_pass

# Orders Database
POSTGRES_ORDERS_DB=orders_db
POSTGRES_ORDERS_USER=orders_user
POSTGRES_ORDERS_PASSWORD=orders_pass

# Payments Database
POSTGRES_PAYMENTS_DB=payments_db
POSTGRES_PAYMENTS_USER=payments_user
POSTGRES_PAYMENTS_PASSWORD=payments_pass

# ==================== BACKEND SERVICES ====================
# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development

# Connection Strings (formatted for Entity Framework)
CONNECTIONSTRING_USERS=Host=db-users;Database=users_db;Username=users_user;Password=users_pass
CONNECTIONSTRING_KITCHEN=Host=db-kitchen;Database=kitchen_db;Username=kitchen_user;Password=kitchen_pass
CONNECTIONSTRING_LOYALTY=Host=db-loyalty;Database=loyalty_db;Username=loyalty_user;Password=loyalty_pass
CONNECTIONSTRING_MENU=Host=db-menu;Database=menu_db;Username=menu_user;Password=menu_pass
CONNECTIONSTRING_ORDERS=Host=db-orders;Database=orders_db;Username=orders_user;Password=orders_pass
CONNECTIONSTRING_PAYMENTS=Host=db-payments;Database=payments_db;Username=payments_user;Password=payments_pass

# ==================== FRONTEND ====================
# Next.js Environment
NODE_ENV=production

# API URLs (adjust for your deployment)
NEXT_PUBLIC_API_URL=http://localhost:5001
NEXT_PUBLIC_USER_SERVICE_URL=http://localhost:5001
NEXT_PUBLIC_KITCHEN_SERVICE_URL=http://localhost:5002
NEXT_PUBLIC_LOYALTY_SERVICE_URL=http://localhost:5003
NEXT_PUBLIC_MENU_SERVICE_URL=http://localhost:5004
NEXT_PUBLIC_ORDER_SERVICE_URL=http://localhost:5005
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:5006

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=change-this-to-a-random-secret-in-production

# OAuth Providers (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==================== PAYMENT PROVIDERS ====================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ==================== REDIS (if using for caching/sessions) ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==================== LOGGING & MONITORING ====================
# Application Insights / Monitoring
APPLICATIONINSIGHTS_CONNECTION_STRING=your_connection_string

# Log Level
LOG_LEVEL=Information

# ==================== CORS SETTINGS ====================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ==================== SECURITY ====================
# JWT Settings
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ISSUER=campuseats
JWT_AUDIENCE=campuseats-api
JWT_EXPIRY_MINUTES=60

# ==================== FEATURE FLAGS ====================
ENABLE_SWAGGER=true
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false

# ==================== EMAIL SERVICE (if using) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@campuseats.com

# ==================== CLOUD STORAGE (if using) ====================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=campuseats-uploads

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_connection_string
AZURE_STORAGE_CONTAINER=uploads

# ==================== RATE LIMITING ====================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# ==================== DEVELOPMENT ====================
# Hot Reload
CHOKIDAR_USEPOLLING=true

# Debug Mode
DEBUG=*


